@page
@model TasteTracker.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h2 class="fw-bold mb-2 text-uppercase">Create Recipe</h2>

                        <form method="post" class="mt-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Name" class="control-label text-white-50">Food Name</label>
                                <input asp-for="RecipeItem.Name" class="form-control" />
                                <span asp-validation-for="RecipeItem.Name" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Description" class="control-label text-white-50">Description</label>
                                <textarea asp-for="RecipeItem.Description" class="form-control"></textarea>
                                <span asp-validation-for="RecipeItem.Description" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Ingredients" class="control-label text-white-50">Ingredients</label>
                                <textarea asp-for="RecipeItem.Ingredients" class="form-control"></textarea>
                                <span asp-validation-for="RecipeItem.Ingredients" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Instructions" class="control-label text-white-50">Instructions</label>
                                <textarea asp-for="RecipeItem.Instructions" class="form-control"></textarea>
                                <span asp-validation-for="RecipeItem.Instructions" class="text-danger"></span>
                            </div>
                            <br />
                            <!-- Buttons Row -->
                            <div class="d-flex justify-content-center gap-3">
                                <button type="submit" class="btn btn-primary px-4">Create</button>
                                <a asp-page="./Index" class="btn btn-outline-light px-4">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
