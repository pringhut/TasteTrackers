@page
@model TasteTracker.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid p-5 bg-light">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">Recipes Index</h1>
        </div>
        <div class="col-md-4 text-md-end text-center">
            <!-- Create New Button -->
            <a asp-page="Create" class="btn btn-lg btn-outline-success px-4 py-2 rounded-pill shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Create New Recipe
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model.RecipeItem)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text text-muted">@Html.DisplayFor(modelItem => item.Description)</p>
                        <p><strong>Ingredients:</strong> @Html.DisplayFor(modelItem => item.Ingredients)</p>
                        <p><strong>Instructions:</strong> @Html.DisplayFor(modelItem => item.Instructions)</p>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye me-2"></i>Details
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
