@page
@model TasteTracker.Pages.Recipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h2 class="fw-bold mb-2 text-uppercase">Edit Recipe</h2>

                        <form method="post" class="mt-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="RecipeItem.Id" />

                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Name" class="control-label text-white-50">Name</label>
                                <input asp-for="RecipeItem.Name" class="form-control" />
                                <span asp-validation-for="RecipeItem.Name" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Description" class="control-label text-white-50">Description</label>
                                <input asp-for="RecipeItem.Description" class="form-control" />
                                <span asp-validation-for="RecipeItem.Description" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Ingredients" class="control-label text-white-50">Ingredients</label>
                                <input asp-for="RecipeItem.Ingredients" class="form-control" />
                                <span asp-validation-for="RecipeItem.Ingredients" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <span class="text-danger">*</span>
                                <label asp-for="RecipeItem.Instructions" class="control-label text-white-50">Instructions</label>
                                <input asp-for="RecipeItem.Instructions" class="form-control" />
                                <span asp-validation-for="RecipeItem.Instructions" class="text-danger"></span>
                            </div>

                            <!-- Save Button with Styling -->
                            <div class="form-group mt-4">
                                <input type="submit" value="Save" class="btn btn-success btn-lg w-100" />
                            </div>
                        </form>

                        <!-- Back to List Button with Styling -->
                        <div class="mt-3">
                            <a asp-page="./Index" class="btn btn-outline-light btn-lg w-100">
                                Back to List
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
